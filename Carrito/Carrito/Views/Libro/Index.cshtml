@model Libro
@{
    ViewData["Title"] = "Detalle del libro";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm p-4">
                @* PORTADA *@
                @if (!string.IsNullOrEmpty(Model.CoverUrl))
                {
                    <div class="text-center mb-3">
                        <img src="@Model.CoverUrl" alt="@Model.Title"
                             class="img-fluid" style="max-height: 350px; object-fit: contain;" />
                    </div>
                }

                <h2 class="fw-bold">@Model.Title</h2>

                @if (Model.Author != null)
                {
                    <h5 class="text-muted">@Model.Author.FullName</h5>
                }

                @* Precio *@
                @if (Model.Price > 0)
                {
                    <h3 class="text-success fw-bold mb-3">$@Model.Price</h3>
                }

                @* Stock *@
                @if (Model.Stock > 0)
                {
                    <h5 class="text-success fw-bold mb-3">Stock disponible: @Model.Stock</h5>

                    <a asp-controller="Carrito"
                       asp-action="Agregar"
                       asp-route-id="@Model.Id"
                       class="btn btn-primary">
                        Comprar
                    </a>
                }
                else
                {
                    <h5 class="text-danger fw-bold mb-3">Sin stock</h5>
                    <button class="btn btn-secondary" disabled>Sin stock</button>
                }

                @* Sinopsis *@
                @if (!string.IsNullOrWhiteSpace(Model.SynopsisEs))
                {
                    <hr />
                    <p class="mt-3">@Model.SynopsisEs</p>
                }
            </div>
        </div>
    </div>
</div>