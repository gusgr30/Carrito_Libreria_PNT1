@using Microsoft.EntityFrameworkCore
@{
    ViewData["Title"] = "Librería Digital"; 

}

<h1>Libros</h1>
<main>
    @{
        using (var context = new AppDbContext())
        {
            var libros = context.Libros
                .Include(l => l.Author)
                .Include(l => l.Genre)
                .Include(l => l.Publisher)
                .ToList();

            @for(int i = 0; i < 16; i++)
            {
                <div class="card">
                    <img src="@libros[i].CoverUrl" alt="@libros[i].Title">
                    <h2>@libros[i].Title</h2>
                    <p>@libros[i].Author.FullName</p>
                    <p>$25.000.-</p>
                    <button>Comprar</button>
                </div>
            }
        }
    }

</main>
